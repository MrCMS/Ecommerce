@using MrCMS.Helpers
@using MrCMS.Web.Apps.Ecommerce.Pages
@model MrCMS.Entities.Documents.Web.Webpage
@using MrCMS.Web.Apps.Ecommerce.Services.Products;
@{
    Layout = "_BaseEcommerceLayout.cshtml";
}

<header class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="pull-left logo">
                @{ RenderZone("Header Left"); }
            </div>
            @{ RenderZone("Header Right", allowFrontEndEditing: false); }
            @{ RenderZone("User Links", allowFrontEndEditing: false); }

            <form id="productSearchForm" method="GET" name="productSearchForm" action="@(UniquePageHelper.GetUrl<ProductSearch>())"
                  class="hidden-xs pull-right search-box" novalidate="novalidate">

                <div id="custom-templates" class="input-group">
                    <input id="searchTerm" class="typeahead tt-query form-control" autocomplete="off" spellcheck="false"
                           name="searchTerm" placeholder="e.g : Shorts or Lela" type="text" value="">
                    <span class="input-group-btn">
                        <button id="searchButton" class="btn btn-default btn-default-blue" type="submit" name="searchButton">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>

            </form>
        </div>
    </div>
</header>

<nav class="navbar navbar-inverse" role="navigation" id="site-navigation">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="visible-xs visible-sm mobilemenu">
                    <a href="#" id="left-menu-toggle"><span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;Menu</a>

                    <form method="GET" id="productSearchForm-mobile" name="productSearchForm-mobile" 
                          action="@(UniquePageHelper.GetUrl<ProductSearch>())" 
                          class="pull-right hidden-sm search-box" novalidate="novalidate">

                        <div id="custom-templates-mobile" class="input-group">
                            <input id="searchTerm-mobile" class="typeahead tt-query form-control search-box"  
                                   name="searchTerm" autocomplete="off" placeholder="e.g : Shorts" type="text" 
                                   value="@Request.QueryString["searchTerm"]">
                            <span class="input-group-btn">
                                <button id="searchButton-mobile" class="btn btn-default btn-default-blue" type="submit" name="searchButton-mobile">
                                <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </span>
                        </div>
                    </form>

                </div>
                <div class="hidden-sm">
                    <nav class="navbar-collapse collapse">
                        @{ RenderZone("Navigation"); }
                    </nav>
                </div>
            </div>
        </div>
    </div>
</nav>

<div class="left-menu"></div>
<div class="right-menu"></div>
<div class="site-container ">
    <div class="value-props">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="pull-left">
                        <ul>
                            <li>
                                <i class="glyphicon glyphicon-ok green"></i> @Resource("Value Prop 1", "FREE delivery")
                            </li>
                            <li>
                                <i class="glyphicon glyphicon-ok green"></i>@Resource("Value Prop 2", "100 % Secure shopping")
                            </li>
                        </ul>
                    </div>
                    <div class="pull-right margin-right-minus">
                        <ul>
                            <li>
                                e : <a href="@Resource("info@mrcms.com")">@Resource("info@mrcms.com")</a>
                            </li>
                            <li>
                                @Resource("Telephone", "t : 0191 269 3420")
                            </li>
                        </ul>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>

    @{ RenderZone("Before Content"); }
    @RenderBody()
    @{ RenderZone("After Content"); }

    <footer class="margin-top-bottom-30">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" id="footer-area-1">
                    @{ RenderZone("Footer Area 1"); }
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" id="footer-area-2">
                    @{ RenderZone("Footer Area 2"); }
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" id="footer-area-3">
                    @{ RenderZone("Footer Area 3"); }
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" id="footer-area-4">
                    @{ RenderZone("Footer Area 4"); }
                </div>
            </div>
        </div>
    </footer>
</div>
