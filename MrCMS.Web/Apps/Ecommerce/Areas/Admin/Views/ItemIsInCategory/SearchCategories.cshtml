@using MrCMS.Helpers
@model MrCMS.Paging.IPagedList<MrCMS.Web.Apps.Ecommerce.Pages.Category>
@if (Model.Any())
{
    <div id="categories" data-paging-type="async">
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-striped table-condensed pull-left" style="margin-bottom: 0;">
                    @foreach (var item in Model)
                    {
                        <tr><td>@item.Name - @item.PublishOn.GetValueOrDefault().ToString("d MMM yyyy")</td><td><div class="pull-right"><button data-category-id="@item.Id" data-category-name="@item.Name" class="btn btn-success add-category">Add</button></div></td></tr>
                    }
                </table>
            </div>
        </div>
        @Html.Pager(Model, "SearchCategories", i => new { page = i })
    </div>
}